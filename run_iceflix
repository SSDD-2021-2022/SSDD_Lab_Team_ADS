#!/bin/bash
python3 IceFlix/Main.py --Ice.Config=IceFlix/main_service.config admin &
python3 IceFlix/Authenticator.py "Main:tcp -p 9090" &
python3 IceFlix/MediaCatalog.py "Main:tcp -p 9090" &
python3 IceFlix/StreamProvider.py "Main:tcp -p 9090" &
# When receiving CTRL+C, kill all the processes generated by this bash script
trap 'kill $(jobs -p)' SIGINT SIGTERM EXIT
wait
exit 0