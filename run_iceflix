#!/bin/bash
mkdir -p /tmp/db/registry
icebox --Ice.Config=./configs/icebox.config &
icegridregistry --Ice.Config=configs/icegrid.config &
python3 IceFlix/Main.py --Ice.Config=configs/main.config admin &
python3 IceFlix/Authenticator.py --Ice.Config=configs/general.config &
python3 IceFlix/MediaCatalog.py --Ice.Config=configs/general.config &
python3 IceFlix/StreamProvider.py --Ice.Config=configs/general.config &
trap "kill 0" SIGINT
wait